<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- 전체 콘텐츠 레이아웃 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 상단 버튼 패널 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/dateInMain"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1.5"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"
                android:text="날짜 표시"/>

            <Button
                android:id="@+id/backToMainInMainBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#009688"
                android:textColor="#FFFFFF"
                android:text=""
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:drawableLeft="@drawable/baseline_assignment_24"/>

            <Button
                android:id="@+id/backToDiaryInMainBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#009688"
                android:textColor="#FFFFFF"
                android:text=""
                android:layout_marginEnd="4dp"
                android:drawableLeft="@drawable/baseline_auto_stories_24"/>

            <Button
                android:id="@+id/backToProgressInMainBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#009688"
                android:textColor="#FFFFFF"
                android:text=""
                android:layout_marginEnd="4dp"
                android:drawableLeft="@drawable/baseline_analytics_24"/>
        </LinearLayout>

        <!-- 메인 콘텐츠 영역 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/todayDateTextViewInMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="습관 목록"
                android:textSize="18sp"
                android:textColor="#333333"
                android:paddingBottom="12dp"
                android:textStyle="bold"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_habit"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <!-- 각 목표 습관을 표시할 레이아웃을 여기에 추가 -->

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <!-- 하단 오른쪽에 위치한 추가 버튼 -->
    <Button
        android:id="@+id/addInMainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:text="추가"
        android:padding="12dp"
        android:elevation="6dp"
        android:layout_margin="16dp"
        android:drawableLeft="@android:drawable/ic_input_add"/>
</FrameLayout>
